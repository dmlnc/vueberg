{
  "name": "vueberg",
  "version": "0.0.4",
  "private": false,
  "type": "module",
  "files": [
    "lib",
    "dist"
  ],
  "main": "./lib/vueberg.umd.cjs",
  "module": "./lib/vueberg.js",
  "exports": {
    ".": {
      "import": "./lib/vueberg.js",
